                        <th scope="col"> <h4> اسم الفئة/الجهة المستفيدة</h4></th>
                    </tr>
                </thead>
                <tbody>
                     @for (int i = 1; i <=5; i++)
                    {
                        var required = "";
                        var x = i + 5;
                        var desc = "";
                        if (Model.Count > 0)
                        {
                            var obj = Model.Where(xx => xx.Number == x).FirstOrDefault();
                            desc = obj != null ? obj.Description : "";
                        }
                        if (i ==1)
                        {
                            required = "required";
                        }
                        <tr>
                            <th scope="row"> @i</th>
                            <td>
                                <input type="text" class="form-control txt-height" id="txtService_@x" onkeyup="Expert.Application.textCounter(this,'remainings_@x');" @required value="@desc">
