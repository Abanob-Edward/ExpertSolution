@inject ICommonDAO _CommonDAO;
@{
    var userInfo = Html.GetUserinfo();
    var EvaluatorGroupLst = _CommonDAO.GetEvaluatorGroup();
}
<div class="modal fade" id="EvalActionModal" tabindex="-1" data-bs-backdrop="false" aria-hidden="true" style="display: none;">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-body">
                <!-- Default Tabs -->
                <ul class="nav nav-tabs" id="myTab" role="tablist">
                    <li class="nav-item" role="presentation">
                        <button class="nav-link active" id="home-tab" data-bs-toggle="tab" data-bs-target="#home" type="button" role="tab" aria-controls="home" aria-selected="true">التقييم</button>
                    </li>
                </ul>
                <div class="tab-content pt-2" id="myTabContent">
                    <div class="tab-pane fade active show" id="home" role="tabpanel" aria-labelledby="home-tab">
                        <form class="row g-1 needs-validation" novalidate id="formEvaluation" onsubmit="return false;">

                            <div class="row mb-3 mt-2">
                                <label class="col-sm-3 col-form-label">الدرجة </label>
                                <div class="col-sm-9">
                                    <input type="number" class="form-control" id="txtDegree" required>
                                    <div style="color:#198754">
                                        <label id="lblDegreeMessageinfo"></label>
                                    </div>
                                    <div class="invalid-feedback">
                                        <label id="lblDegreeMessage"></label>
                                    </div>
                                </div>

                            </div>
                            <div class="row mb-3">
                                <label class="col-sm-3 col-form-label">سبب التقييم </label>
                                <div class="col-sm-9">
                                    <select class="form-select" id="selectDegreeReason" aria-label="Default select example">
                                        <option value="0"></option>
                                        <option value="1">بيانات مكتملة</option>
                                        <option value="2">بيانات غير مكتملة</option>
                                        <option value="3">لا يوجد مرفقات</option>
                                        <option value="4">أخرى</option>
                                    </select>
                                </div>

                            </div>
                            <div class="row mb-3">
                                <label class="col-sm-3 col-form-label">ملاحظات </label>
                                <div class="col-sm-9">
                                    <textarea class="form-control txt-height" id="txtDegreeNotes"></textarea>
                                </div>

                            </div>

                            <div class="modal-footer">
                                @if (userInfo.UserType == 3)
                                {
                                    <button class="btn btn-primary" id="btnSaveEvaluation" onclick="Expert.Evaluation.SaveEvaluation()">حفظ</button>
                                }
                                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">إلغاء</button>


                            </div>
                        </form>
                    </div>

                </div><!-- End Default Tabs -->

            </div>

        </div>
    </div>
</div>